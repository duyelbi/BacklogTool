{
  "name": "backlog-tool",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch": "webpack --watch",
    "lint": "tslint --fix src/**/*.ts",
    "lint:ci": "tslint src/**/*.ts",
    "test": "jest",
    "testw": "jest --watchAll",
    "test:ci": "jest --reporters default --reporters jest-junit",
    "build": "npm run lint && npm run test && webpack",
    "build:ci": "npm run lint:ci && npm run test:ci && webpack",
    "push": "npm run build && clasp push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duyelbi/BacklogTool.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/duyelbi/BacklogTool/issues"
  },
  "homepage": "https://github.com/duyelbi/BacklogTool#readme",
  "devDependencies": {
    "@types/google-apps-script": "1.0.20",
    "@types/jest": "^26.0.19",
    "gas-webpack-plugin": "^1.2.2",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^4.3.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/.+(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "output": "reports/js-test-results.xml"
  }
}
